# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=complihr
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Application
NODE_ENV=development
PORT=3010

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# HMRC Gateway (Production)
HMRC_GATEWAY_URL=https://api.service.hmrc.gov.uk
HMRC_VENDOR_ID=your-vendor-id
HMRC_SENDER_ID=your-sender-id

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+44xxxxxxxxxx

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@complihr.com
SMTP_FROM_NAME=CompliHR

# AWS S3 (Document Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=complihr-documents

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
